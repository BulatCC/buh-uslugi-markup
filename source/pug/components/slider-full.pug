.slider.slider--full-bg
    .swiper(data-slider)
        .swiper-wrapper
            - for (var i = 0; i < 4; ++i) {
                .swiper-slide.slider_slide(style={'--bg-img': 'url(../img/spb.png)'})
                    .slider_content
                        .container
                            h2.title.color-white.slider_title Бухгалтерские услуги
                                br
                                | в Санкт-Петербурге
                            a(href="#").button Наша презентация
            - }
        .container.slider_container
            .swiper-pagination.slider_pagination
            .slider_buttons
                button.swiper-button-prev.slider_button.slider_button--prev
                    img.slider_button-img(src="img/svg/slider-arrow-left.svg" alt="назад" width="8" height="15")
                button.swiper-button-next.slider_button.slider_button--next
                    img.slider_button-img(src="img/svg/slider-arrow-right.svg" alt="вперед" width="8" height="15")
